{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["es2015", "dom", "es2016", "es2017"],
    "downlevelIteration": true,
    "moduleResolution": "nodenext",
    "module": "ESNext",
    "declaration": true,
    "outDir": "./lib",
    "strict": false,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "types": ["vitest/globals"],
    "skipLibCheck": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "**/*.test.ts"]
}
